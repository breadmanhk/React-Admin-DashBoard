# ===========================================
# Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# DATABASE CONFIGURATION (Required)
# ===========================================
DB_NAME=admin_dashboard
DB_USERNAME=root
DB_PASSWORD=your_password_here

# ===========================================
# JWT CONFIGURATION (Required)
# ===========================================
# Generate a secure random string (minimum 64 characters)
# You can use: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_minimum_64_characters_long
JWT_EXPIRATION=86400000

# ===========================================
# CORS CONFIGURATION (Optional)
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# JPA/HIBERNATE CONFIGURATION (Optional)
# ===========================================
# Options: create, create-drop, update, validate, none
DDL_AUTO=create-drop
SHOW_SQL=true
FORMAT_SQL=true

# ===========================================
# DATABASE CONNECTION POOL (Optional)
# ===========================================
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=5
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1200000
HIKARI_AUTO_COMMIT=true

# ===========================================
# LOGGING CONFIGURATION (Optional)
# ===========================================
# Levels: ERROR, WARN, INFO, DEBUG, TRACE
LOG_HIBERNATE_SQL=DEBUG
LOG_HIBERNATE_BINDER=TRACE
LOG_APP_LEVEL=DEBUG